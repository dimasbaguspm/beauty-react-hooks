{
  "name": "@react-beauty/hooks",
  "description": "@react-beauty hook collection",
  "license": "MIT",
  "version": "1.0.0",
  "stableVersion": "1.0.0",
  "keywords": [
    "react",
    "@react-beauty"
  ],
  "author": "Dimas Bagus P <dimas.bagus.pm1@gmail.com>",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "type": "./dist/index.d.ts"
  },
  "scripts": {
    "lint": "eslint src",
    "check": "tsc --noEmit",
    "build": "vite build"
  },
  "dependencies": {
    "@react-beauty/use-clipboard": "workspace:*",
    "@react-beauty/use-element-width-observer": "workspace:*",
    "@react-beauty/use-event-promise-rejection": "workspace:*"
  },
  "peerDependencies": {
    "@types/react": "*",
    "react": "^16.8 || ^17.0 || ^18.0"
  },
  "devDependencies": {
    "@react-beauty/eslint": "workspace:*",
    "@react-beauty/tsc": "workspace:*",
    "@react-beauty/vite": "workspace:*",
    "@react-beauty/vitest": "workspace:*"
  }
}
